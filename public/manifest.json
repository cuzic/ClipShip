{
  "manifest_version": 3,
  "name": "PasteHost",
  "version": "1.0.0",
  "description": "One-click deploy clipboard to Netlify, Vercel, Cloudflare Pages, or Gist",
  "permissions": ["clipboardRead", "storage", "tabs", "identity"],
  "host_permissions": [
    "https://api.netlify.com/*",
    "https://api.github.com/*",
    "https://api.vercel.com/*",
    "https://api.cloudflare.com/*",
    "https://pastehost-oauth.netlify.app/*"
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "PasteHost",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
